  SET (ADF_BUILD_FOUND FALSE) 
  MESSAGE (SEND_ERROR " Could not find AMBF CONTROL SYSTEM.")
ENDIF (RBDL_ADF_MODEL_INCLUDE_DIR AND RBDL_ADF_LIBRARY)

